<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

	<!-- Do use PrettyFaces ONLY for navigation -->

	<navigation-rule>
		<from-view-id>*</from-view-id>
		
		<navigation-case>
			<from-outcome>administrativeUnitEditView</from-outcome>
			<to-view-id>/private/administrativeunit/edit.jsf</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>administrativeUnitListView</from-outcome>
			<to-view-id>/private/administrativeunit/list.jsf</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>administrativeUnitEditActivitiesView</from-outcome>
			<to-view-id>/private/administrativeunit/editactivities.jsf</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>administrativeUnitListDestinationView</from-outcome>
			<to-view-id>/private/administrativeunit/listdestinations.jsf</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>administrativeUnitListActivityView</from-outcome>
			<to-view-id>/private/administrativeunit/listactivities.jsf</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>programListView</from-outcome>
			<to-view-id>/private/program/list.jsf</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>sectionReadView</from-outcome>
			<to-view-id>/private/section/read.jsf</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>activityEditDestinationsView</from-outcome>
			<to-view-id>/private/activity/editdestinations.jsf</to-view-id>
			<redirect />
		</navigation-case>
		
		<navigation-case>
			<from-outcome>activityListDestinationView</from-outcome>
			<to-view-id>/private/activity/listdestinations.jsf</to-view-id>
			<redirect />
		</navigation-case>
		
	</navigation-rule>

</faces-config>
